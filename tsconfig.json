{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "dom"
    ],
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "noEmitHelpers": false,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}